[Unit]
Description=JBoss EAP instance ({{ jboss_eap_instance_name }})
After=syslog.target network.target

[Service]
Type=forking
Environment=JBOSS_HOME={{ jboss_home }}
Environment=JBOSS_USER={{ jboss.user }}
ExecStart={{ jboss_home }}/service/jboss-as-standalone.sh start
ExecStop={{ jboss_home }}/service/jboss-as-standalone.sh stop
TimeoutStartSec=300

[Install]
WantedBy=multi-user.target
